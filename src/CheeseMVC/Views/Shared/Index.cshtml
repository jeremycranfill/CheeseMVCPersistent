 @model List<CheeseMVC.Models.Menu>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Link</th>
    </tr>

    @foreach (var menu in Model)
    {
        <tr>
            <td>@menu.Name</td>
            <td>><a asp-controller="Menu" asp-action="ViewMenu" asp-route-id="@menu.ID">@menu.ID</a></td>
            
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No Menus yet!</p>
}

<p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>
